{
    "npmClient": "yarn",
    "useWorkspaces": true,
    "packages": ["common/*", "services/*"],
    "version": "independent",
    "command": {
        "version": {
            "allowBranch": ["main", "master"],
            "exact": true,
            "ignoreChanges": ["**/*.md"],
            "message": "build: release version %v"
        }
    }
}
