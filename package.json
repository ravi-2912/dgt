{
    "name": "dgt",
    "version": "1.0.0",
    "private": true,
    "workspaces": {
        "packages": [
            "common/*",
            "services/*"
        ],
        "nohoist": [
            "**/husky",
            "**/commitizen",
            "**/@commitlint/cli",
            "**/cz-conventional-changelog",
            "**/conventional-changelog-cli",
            "**/@commitlint/config-conventional"
        ]
    },
    "scripts": {
        "meta-add": "yarn meta git add",
        "meta-pull": "yarn meta git pull",
        "meta-push": "yarn meta git push",
        "meta-commit": "yarn meta git commit",
        "meta-branch": "yarn meta git branch",
        "meta-status": "yarn meta git status",
        "meta-update": "yarn meta git update",
        "meta-clean": "yarn meta git clean -fd",
        "meta-checkout": "yarn meta git checkout",
        "meta-create": "yarn meta project create",
        "meta-import": "yarn meta project import",
        "meta-new-branch": "yarn meta git checkout -b",
        "lerna-version": "yarn lerna version --yes --no-push --conventional-commits --no-changelog --no-git-tag-version",
        "lerna-clean": "yarn lerna clean --yes",
        "lerna-list": "yarn lerna la",
        "lerna-run": "yarn lerna run --parallel --stream",
        "lerna-exec": "yarn lerna exec -- ",
        "kill-ports": "yarn kill-port --port 3000,6006",
        "start": "yarn kill-ports && yarn lerna-run start",
        "start-concurrently": "yarn kill-ports && yarn concurrently -n \"client,storybook\" \"yarn workspace client start\" \"yarn workspace ngd-pattern-library start\"",
        "lint": "yarn eslint .",
        "lint:fix": "yarn eslint . --fix",
        "prettify": "yarn prettier --write .",
        "node-clean": "rm ./yarn.lock && rm -rf ./node_modules",
        "clean": "yarn lerna-clean && yarn node-clean"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "commitlint": {
        "plugins": [
            "workspace-scopes"
        ],
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "scope-enum": [
                2,
                "always",
                [
                    "dgt"
                ]
            ]
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "echo linting && lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "prepare-commit-msg": "./prepare-commit-msg.cmd"
        }
    },
    "lint-staged": {
        "*.{css,less,scss,html,json,jsx,js}": [
            "yarn prettify"
        ],
        "*.{js, jsx}": "yarn lint:fix"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "printWidth": 120,
        "endOfLine": "auto",
        "singleQuote": true,
        "trailingComma": "es5",
        "overrides": [
            {
                "files": [
                    "*.css",
                    "*.scss",
                    "*.less"
                ],
                "options": {
                    "semi": true,
                    "singleQuote": false,
                    "printWidth": 80
                }
            }
        ]
    },
    "eslintConfig": {
        "ignorePatterns": [
            "!.*",
            ".git",
            "dist",
            "build",
            "node_modules"
        ],
        "extends": [
            "wesbos"
        ],
        "rules": {
            "no-console": 0,
            "react/prop-types": 0,
            "react/jsx-props-no-spreading": 0,
            "prettier/prettier": [
                "error",
                {
                    "tabWidth": 4,
                    "semi": false,
                    "printWidth": 120,
                    "endOfLine": "auto",
                    "singleQuote": true,
                    "trailingComma": "es5"
                }
            ]
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@commitlint/config-lerna-scopes": "^12.1.1",
        "babel-eslint": "10.1.0",
        "commitizen": "^4.2.3",
        "commitlint-plugin-workspace-scopes": "^1.1.0",
        "concurrently": "^6.0.1",
        "conventional-changelog-cli": "^2.1.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "7.8.1",
        "eslint-config-airbnb": "18.2.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-config-wesbos": "1.0.1",
        "eslint-plugin-html": "6.1.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jsx-a11y": "6.3.1",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-react": "7.20.6",
        "eslint-plugin-react-hooks": "4.1.2",
        "husky": "4.3.8",
        "kill-port": "^1.6.1",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.4",
        "meta": "^2.2.15",
        "prettier": "2.1.1"
    }
}
